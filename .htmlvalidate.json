{
  "extends": [
    "htmlvalidate:recommended"
  ],
  "plugins": [
    "./rules.js"
  ],
  "rules": {
    "attr-quotes": "off",
    "wcag/h30": "off",
    "no-inline-style": "off",
    "element-required-attributes": "off",
    "prefer-tbody": "off",
    "long-title": "off",
    "hop/title": "warn",
    "no-deprecated-attr": "warn",
    "doctype-style": "off",
    "text-content": "off",
    "prefer-native-element" : "off",
    "no-redundant-role" : "off",
    "prefer-button" : "off",
    "no-multiple-main": "warn"
  },
  "root": true
}

